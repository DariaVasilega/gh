{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1 class="text-center">Category index</h1>
    <table class="table table-bordered table-dark">
        <div class="container">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Show</th>
                <th>Edit</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>
                        <a class="btn btn-outline-light" href="/{{ path('category_show', {'id': category.id}) }}" role="button">show</a>
                    </td>
                    <td>
                        <a class="btn btn-outline-light" href="/{{ path('category_edit', {'id': category.id}) }}" role="button">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
            <a class="btn btn-outline-primary" href="/{{ path('category_new') }}" role="button">Create new</a>
        </div>
    </table>
{% endblock %}
